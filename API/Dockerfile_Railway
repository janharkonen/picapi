FROM nginx:stable

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    python3 python3-pip \
    libjpeg62-turbo zlib1g libpng16-16 libgomp1 libgl1 libglib2.0-0 && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY requirements.txt .
RUN python3 -m pip install --no-cache-dir --break-system-packages -r requirements.txt
COPY . /app

# Nginx reverse proxy config (LISTEN_PORT is replaced at runtime)
RUN printf 'server {\n    listen LISTEN_PORT;\n    client_max_body_size 20M;\n    location / {\n        proxy_pass http://127.0.0.1:5000;\n        proxy_set_header Host $host;\n        proxy_set_header X-Real-IP $remote_addr;\n        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;\n        proxy_set_header X-Forwarded-Proto $scheme;\n    }\n}\n' > /etc/nginx/conf.d/default.conf

# Startup script: substitute the port, start Flask with output to both log and stdout, then nginx
RUN printf '#!/bin/sh\nNGINX_PORT=${PORT:-80}\nsed -i "s/LISTEN_PORT/$NGINX_PORT/g" /etc/nginx/conf.d/default.conf\necho "Starting Flask on port 5000..."\nPORT=5000 python3 -u API/picapi.py 2>&1 | tee /app/log.txt &\nsleep 2\necho "Starting nginx on port $NGINX_PORT..."\nnginx -g "daemon off;"\n' > /start.sh && chmod +x /start.sh

RUN echo "alias log='cat /app/log.txt'" >> ~/.bashrc
EXPOSE 80
CMD ["/start.sh"]
